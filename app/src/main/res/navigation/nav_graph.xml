<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.ciromine.movieappv3.ui.movielist.MovieListFragment"
        android:label="fragment_slash"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_slashFragment_to_characterListFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@+id/detailFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.ciromine.movieappv3.ui.detail.DetailFragment"
        android:label="fragment_slash"
        tools:layout="@layout/fragment_movie_list">
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

</navigation>